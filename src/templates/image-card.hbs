{{#each this.hits}}
<li class="card">
    <div class="photo-card">
        <div class="image-thumb">
        <img src="{{this.webformatURL}}" alt="{{this.tags}}" data="{{this.largeImageURL}}" width ="350"/>
        </div>
        <div class="stats">
            <p class="stats-item">
                <i class="material-icons">thumb_up</i>
                {{this.likes}}
            </p>
            <p class="stats-item">
                <i class="material-icons">visibility</i>
                {{this.views}}
            </p>
            <p class="stats-item">
                <i class="material-icons">comment</i>
                {{this.comments}}
            </p>
            <p class="stats-item">
                <i class="material-icons">cloud_download</i>
                {{this.downloads}}
            </p>
        </div>
    </div>
</li>
{{/each}}
